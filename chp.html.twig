{% extends '::chp.base.html.twig' %}

{% block meta %}
    {{ parent() }}
    {% if page_keywords %}
        <meta name="keywords" content="{{ page_keywords }}">
    {% endif %}
    {% if page_description %}
        <meta name="description" content="{{ page_description }}">
    {% endif %}
{% endblock %}
{% block title %}{{ page_title|default(page_name ~ ' | Corpus Christi Business News') }}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{asset('themes/'~ theme ~'/js/vendor/modernizr.js') }}'></script>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <!-- Modules -->

    <!-- End Modules -->
    <link rel='stylesheet' href="{{ asset('themes/'~ theme ~'/css/foundation.css') }}">
{% endblock %}

{% block body %}
    <header class="l-container">
        <ul class="b-breadcrumbs f-breadcrumbs h-breadcrumbs">
            <li class="back"><a class="b-btn-sm f-btn-sm b-btn-sm_black" href="javascript: history.go(-1)">Back</a>&nbsp;Â»&nbsp;</li>
            <li><span class="b-breadcrumbs-current f-breadcrumbs-current">{{ page_name }}</span></li>
            <li>{{ page_edit() }}</li>
        </ul>
        {% if logo_image %}
            <div class="b-logo">
                <img src="{{ logo_image }}">
            </div>
        {% endif %}
    </header>
    <div class="l-container">
        <div class="b-content_wr">
            {{ slider()|raw }}
            <div class="l-content">
                <div class="l-leftsidebar">
                    <h1>{{ page_name }}</h1>
                    <article>{{ content }}</article>
                </div>
                <div class="l-rightsidebar">
                    <aside class="radius_10">
                        {{ social_media_links_widget() }}
                        {{ ad_rotator() }}
                        {{ coupons() }}
                        {{ phones() }}
                        {{ customer_website() }}
                        {{ fax()}}
                        {{ addresses() }}
                        {{ email_form() }}
                        {{ opentable_widget() }}
                        {{ miscellaneous_text() }}
                        {{ expedia() }}
                    </aside>
                </div>
            </div>
        </div>

        <footer>
            {{ footer_text }}
        </footer>
    </div>
    <link rel='stylesheet' href="{{ asset('bundles/picayuneapplication/opentable/opentable.css') }}">
    <script src='{{asset('themes/'~ theme ~'/js/vendor/jquery.js') }}'></script>
    <script src='{{asset('themes/'~ theme ~'/js/foundation.min.js') }}'></script>
{% endblock %}
